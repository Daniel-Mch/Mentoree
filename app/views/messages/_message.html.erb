
<div class="message-container" id="message-<%= message.id %>">
  <i class="author">
    <div class="message-avatar-name">
      <%#= message.user.photo? cl_image_tag message.user.photo.key : image_tag "https://i.pinimg.com/originals/51/f6/fb/51f6fb256629fc755b8870c801092942.png", class: "avatar-small"%>
      <h3><%= message.user.first_name %></h3>
    </div>

    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p><%= message.content %></p>
</div>
