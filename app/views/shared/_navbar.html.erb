  <% if current_page?(root_path) %>
    <div class="navbar-menu">
      <a href="#about" class="paragraph-navbar mx-3">about</a>
      <a href="#how-it-works" class="paragraph-navbar mx-3">how it works</a>
      <a href="#testimonials" class="paragraph-navbar mx-3">testimonials</a>
      <a href="#testimonials" class="paragraph-navbar mx-3">contact</a>
    </div>
  <% end %>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <% if user_signed_in?  %>

        <li class="nav-item dropdown d-flex align-items-center">

          <% if current_user.photo.attached? %>
          <p class="avatar-name pr-2 pt-3"> <strong><%= current_user.first_name %></strong> </p><br>  <%= cl_image_tag current_user.photo.key, class: "avatar-small dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "https://i.pinimg.com/originals/51/f6/fb/51f6fb256629fc755b8870c801092942.png", class: "avatar-small dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end  %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

            <%= link_to "My dashboard", my_dashboard_path, class: "dropdown-item" %>
            <%= link_to "My chatroom", chatroom_path(current_user), class: "dropdown-item" %>
            <%= link_to "Edit work experience", new_after_sign_up_user_industry_path(current_user), class: "dropdown-item" %>
            <%= link_to "Edit meeting topics", new_after_sign_up_advice_preference_path(current_user), class: "dropdown-item" %>
            <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% elsif current_page?(new_user_session_path)%>
        <div class="navbar-menu">
          <%= link_to "Sign up", new_user_registration_path, class:"btn btn-ghost"  %>
        </div>

      <% else %>

        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn btn-flat" %>
        </li>
      <% end %>

    </ul>
  </div>
</div>
