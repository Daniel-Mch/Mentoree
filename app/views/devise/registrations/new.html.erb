<div class="container-form">

  <div class="row">
    <div class="col-6 offset-3 card p-3">
      <%= link_to "back", root_path, class: "back-button" %>
      <br>
      <h2>Sign up</h2>
      <br>
      <p>Glad to see you here. Please fill the form to sign up.</p>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs col-8 offset-2 p-4">
          <%= f.input :first_name,
                      required: true, label: false, placeholder: 'First name' %>
          <%= f.input :last_name,
                      required: true, label: false, placeholder: 'Last name' %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, label: false, placeholder: 'E-mail' %>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" }, label: false, placeholder: 'Password' %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" }, label: false, placeholder: 'Confirm password' %>
        </div>
        <br>
        <div class="form-actions pb-3">
          <%= f.button :submit, "Sign up", class:"btn btn-flat" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="sign-up-illustration">
      <%= image_tag " mentoree-illustration-2.png", alt: "mentoree image", height: 350  %>
  </div>

</div>
