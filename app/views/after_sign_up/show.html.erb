<div class="row">
    <div class="col-10 offset-1 card card-profile">
      <h2 class="text-center">Mentor profile</h2>
      <div class="row profile-info">
        <div class="mentor-avatar-big col-3 align-self-center">
          <img class="avatar-large" src="https://cdn2.iconfinder.com/data/icons/avatars-99/62/avatar-370-456322-512.png" alt="">
        </div>
        <div class="mentor-info col-7 text-left p-3">
          <h2><%=@mentor&.first_name %> <%= @mentor&.last_name %></h2>
          <h3>Industry</h3>
          <p>Job role</p>
          <p><%= @mentor&.about %></p>
          <ul>
            <li><strong>Industry</strong> - experience</li>
            <li><strong>Industry</strong> - experience</li>
            <li><strong>Industry</strong> - experience</li>
          </ul>
        </div>
        <div class="stats-mentor p-3 col-2">
          <h3 class="pb-2">24 <i class="fas fa-eye"></i></h3>
          <h3>18 <i class="far fa-thumbs-up"></i></h3>
        </div>
      </div>
      <div class="date-selection container-form pt-3">
        <h3 class="text-center">Pick a meeting date and time</h3>
        <%= simple_form_for [ @mentor, @meeting ], url: my_dashboard_path do |f| %>
          <%= f.input :availability,
            as: :radio_buttons,
            collection_wrapper_tag: 'div',
            collection_wrapper_class: 'category-wrapper',
            item_wrapper_class: 'category-item',
            input_html: {class: 'category-selector'},
            collection: @slots,
            label_method: :slot %>
            <!-- value: slot.strftime("%a %d %b %n %R") -->
          <%= f.button :submit, "Choose Mentor", class: "btn btn-flat" %>
        <% end %>
      </div>
    </div>
  </div>
