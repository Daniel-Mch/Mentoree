<!-- Template for using columns inside columns -->

<div class="row">
  <!-- Use offset to create empty columns on the side -->
  <div class="col-8 offset-2 card card-dashboard">

    <p class="time" style="text-align: right; font-size: 12px;"><%= Time.now %></p>

    <div class="row">
      <!-- Create as many divs as you want, as long as col adds up to 12 -->
      <div class="col-12">
        <!-- Place content here -->
        <h2>Dashboard</h2>

        <div class="dashboard-content">
        <p><%#= test_helper_method(current_user) %></p>
        <h4>Welcome <%= @user.first_name.capitalize %></h4>
        </div>

        <%#= link_to "Prepare meeting", root_path, class: "btn btn-ghost" <---- WHEN USER SELECTED SLOT THEN PREPARE MEETING%>
        <%# raise  %>
        <% if user_completed_profile(@user) && user_completed_user_industries(@user) && user_completed_advice_preference(@user) %>

          <div><br>
            <%= link_to 'Find mentor',after_sign_up_index_path, class: "btn btn-flat" %>
          </div>

        <%elsif !user_completed_profile(@user) %>

          <div class="dashboard-button">
            <%= link_to "complete profile", new_after_sign_up_path, class: "btn btn-ghost" %>
          </div>

        <%elsif !user_completed_user_industries(@user) %>

        <div>
          <%= link_to 'Work experience', new_after_sign_up_user_industry_path(@user), class: "btn btn-ghost" %>
        </div>

        <% else %>

          <div>
            <%= link_to 'Advice preferences', new_after_sign_up_advice_preference_path(@user), class: "btn btn-ghost" %>
          </div>

        <% end  %>

      </div>
    </div>
  </div>
  <div class="cactus-illustration-4">
    <%= image_tag "mentoree-illustration-4.png", alt: "mentoree image", height: 150 %>
  </div>
  <div class="plant-illustration-5">
    <%= image_tag "mentoree-illustration-5.png", alt: "mentoree image", height: 150 %>
  </div>
</div>
